<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/labelNameFrameLayout"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="42dp"
        android:layout_height="42dp">

        <TextView
            android:textColor="#4F7080"
            android:textSize="22dp"
            android:layout_gravity="center"
            android:id="@+id/labelNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:id="@+id/headSculptureImageView"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/icon_activity_main_head_sculpture"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView"
            android:textSize="16dp"
            android:textColor="#00020A"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:id="@+id/messageImageView"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/icon_activity_main_message"/>
    </LinearLayout>
</LinearLayout>